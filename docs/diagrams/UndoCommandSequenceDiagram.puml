@startuml
!include style.puml
skinparam ArrowFontStyle plain

title Simplified Undo Workflow ("undo")

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":AddressBookParser" as AddressBookParser LOGIC_COLOR
participant ":UndoCommandParser" as UndoCommandParser LOGIC_COLOR
participant "uc:UndoCommand" as UndoCommand LOGIC_COLOR
participant "r:CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant "m:Model" as Model MODEL_COLOR
end box

' === 1. User initiates command ===
[-> LogicManager : execute("undo")
activate LogicManager

' === 2. Parsing ===
LogicManager -> AddressBookParser : parseCommand("undo")
activate AddressBookParser

create UndoCommandParser
AddressBookParser -> UndoCommandParser
activate UndoCommandParser
UndoCommandParser --> AddressBookParser
deactivate UndoCommandParser

AddressBookParser -> UndoCommandParser : parse("")
activate UndoCommandParser

create UndoCommand
UndoCommandParser -> UndoCommand
activate UndoCommand
UndoCommand --> UndoCommandParser
deactivate UndoCommand

UndoCommandParser --> AddressBookParser : uc
deactivate UndoCommandParser

destroy UndoCommandParser
AddressBookParser --> LogicManager : uc
deactivate AddressBookParser

' === 3. Execute undo command ===
LogicManager -> UndoCommand : execute(m)
activate UndoCommand

alt can undo?
  UndoCommand -> Model : canUndo()
  activate Model
  Model --> UndoCommand : true
  deactivate Model

  ' Perform undo in the model:
  UndoCommand -> Model : undo()\n- push current to redoStack\n- pop from undoStack\n- resetData(prev)\n- updateFilteredPersonList(activeOnly)
  activate Model
  Model --> UndoCommand
  deactivate Model

  ' LogicManager saves after success (if you persist on undo):
  UndoCommand --> LogicManager : r
  deactivate UndoCommand

  ' (Optional) persist:
  LogicManager -> Model : getAddressBook()
  activate Model
  Model --> LogicManager : ReadOnlyAddressBook
  deactivate Model

  create CommandResult
  LogicManager -> CommandResult : "Undone last action"
  activate CommandResult
  CommandResult --> LogicManager
  deactivate CommandResult

else nothing to undo
  UndoCommand -> Model : canUndo()
  activate Model
  Model --> UndoCommand : false
  deactivate Model

  UndoCommand --> LogicManager : throws CommandException("Nothing to undo")
  deactivate UndoCommand
end

[<-- LogicManager
deactivate LogicManager

@enduml

